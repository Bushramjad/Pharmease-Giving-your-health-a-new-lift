<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Please tell a little more about yourself..."
        android:textColor="#595757"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/fname"
        app:layout_constraintEnd_toEndOf="@+id/fname"
        app:layout_constraintStart_toStartOf="@+id/fname" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="379dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:layout_weight="0.05"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="First name"
        android:maxLines="1"
        android:inputType="text"

        android:textColor="@android:color/black"
        android:textColorLink="@color/grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="379dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.05"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Last Name"
        android:maxLines="1"
        android:inputType="text"

        android:textColor="@android:color/black"
        android:textColorLink="@color/grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fname" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="379dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.05"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Phone"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textColorLink="@color/grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/signup2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lname" />

    <Button
        android:id="@+id/signup2"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_filled"
        android:clickable="true"
        android:focusable="true"
        android:onClick="click"
        android:padding="16dp"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="By signing up or Loging in you agree with our Terms and Conditions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/signup2"
        app:layout_constraintStart_toStartOf="@+id/signup2"
        app:layout_constraintTop_toBottomOf="@+id/signup2" />

    <!--        android:layout_marginBottom="30dp"-->

</androidx.constraintlayout.widget.ConstraintLayout>



